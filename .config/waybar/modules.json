{
  "custom/logo": {
    "format": " ",
    "tooltip-format": "Arch Linux",
    "on-click": "xdg-open https://archlinux.org"
  },

  "clock": {
    "format": "{:%Y-%m-%d %H:%M}",
    "tooltip-format": "{:%A, %d %B %Y}",
    "interval": 60
  },

  "hyprland/workspaces": {
    "format": "{name}",
    "on-click": "hyprctl dispatch workspace {id}"
  },

  "custom/notification": {
    "format": "🔔",
    "exec": "echo '{\"text\": \"🔔\", \"tooltip\": \"Notifications\"}'",
    "return-type": "json",
    "interval": 30,
    "on-click": "notify-send 'No new notifications'"
  },

  "custom/pacman": {
    "format": "📦",
    "exec": "checkupdates | wc -l | awk '{print \"📦 \"$1}'",
    "interval": 1800,
    "on-click": "kitty -e sudo pacman -Syu"
  },

  "tray": {
    "spacing": 10
  },

"wireplumber": {
    "format": "{volume}% {icon}",
    "format-icons": ["🔇", "🔈", "🔉", "🔊"],
    "tooltip-format": "Volume: {volume}%\nStatus: {node_name}",
    "scroll-step": 5,
    "on-click": "pavucontrol",
    "scroll-up-command": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+",
    "scroll-down-command": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-"
},

 "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon}  {capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["", "", "", "", ""]
    },

  "network": {
    "format-wifi": " {essid}",
    "format-ethernet": "󰈀 {ifname}",
    "tooltip-format": "{ipaddr}/{cidr} via {gwaddr}",
    "on-click": "nm-connection-editor"
  },

  "bluetooth": {
    "format": " {status}",
    "format-connected": " {device_alias}",
    "on-click": "blueman-manager"
  },

  "custom/todo": {
    "format": "📝",
    "interval": 60,
    "on-click": "~/.config/waybar/scripts/todo.sh",
    "on-click-right": "hyprctl dispatch closewindow 'class:todo_window'"
  },

  "custom/quit": {
    "format": "❎",
    "tooltip-format": "Quit",
    "on-click": "wlogout",
  },
  "group/expand": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "backlight"],
    "on-click": "expand"
  },

}
